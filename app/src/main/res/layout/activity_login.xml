        <EditText
            android:id="@+id/login_input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:text=""
            android:focusable="true"
            android:inputType="number" />

        <!-- Email Label -->
